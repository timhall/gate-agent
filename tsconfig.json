{
	"compilerOptions": {
		"strict": true,
		"lib": [
			"es2019",
			"es2020.bigint",
			"es2020.string",
			"es2020.symbol.wellknown"
		],
		"module": "es2015",
		"target": "es2019",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"sourceMap": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "src/**/__tests__"]
}
